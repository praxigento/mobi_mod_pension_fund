<?xml version="1.0" encoding="UTF-8"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">

    <!-- **************************************************** -->
    <!-- Data loader (???) -->
    <!-- **************************************************** -->
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">pension_fund_grid.pension_fund_grid_data_source</item>
            <item name="deps" xsi:type="string">pension_fund_grid.pension_fund_grid_data_source</item>
        </item>
        <item name="spinner" xsi:type="string">pension_fund_columns</item>
    </argument>

    <!-- **************************************************** -->
    <!-- Data Source definition -->
    <!-- **************************************************** -->
    <dataSource name="pension_fund_grid_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">\Praxigento\Core\App\Ui\DataProvider\Grid\Base</argument>
            <argument name="name" xsi:type="string">pension_fund_grid_data_source</argument>
            <argument name="gridQueryBuilder"
                      xsi:type="object">\Praxigento\PensionFund\Ui\DataProvider\Grid\Pension\Fund\QueryBuilder</argument>
        </argument>
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/grid/provider</item>
            </item>
        </argument>
    </dataSource>
    <container name="listing_top">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="template" xsi:type="string">ui/grid/toolbar</item>
            </item>
        </argument>
        <bookmark name="bookmarks">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="storageConfig" xsi:type="array">
                        <item name="namespace" xsi:type="string">pension_fund_grid</item>
                    </item>
                </item>
            </argument>
        </bookmark>
        <component name="columns_controls">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="columnsData" xsi:type="array">
                        <item name="provider"
                              xsi:type="string">pension_fund_grid.pension_fund_grid.pension_fund_columns
                        </item>
                    </item>
                    <item name="component" xsi:type="string">Magento_Ui/js/grid/controls/columns</item>
                    <item name="displayArea" xsi:type="string">dataGridActions</item>
                </item>
            </argument>
        </component>
        <filters name="listing_filters">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="columnsProvider"
                          xsi:type="string">pension_fund_grid.pension_fund_grid.pension_fund_columns
                    </item>
                    <item name="storageConfig" xsi:type="array">
                        <item name="provider"
                              xsi:type="string">pension_fund_gridpension_fund_grid.listing_top.bookmarks
                        </item>
                        <item name="namespace" xsi:type="string">current.filters</item>
                    </item>
                    <item name="childDefaults" xsi:type="array">
                        <item name="provider"
                              xsi:type="string">pension_fund_grid.pension_fund_grid.listing_top.listing_filters
                        </item>
                        <item name="imports" xsi:type="array">
                            <item name="visible"
                                  xsi:type="string">pension_fund_grid.pension_fund_grid.pension_fund_columns.${ $.index }:visible
                            </item>
                        </item>
                    </item>
                </item>
            </argument>
        </filters>
        <paging name="listing_paging">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="storageConfig" xsi:type="array">
                        <item name="provider"
                              xsi:type="string">pension_fund_grid.pension_fund_grid.listing_top.bookmarks
                        </item>
                        <item name="namespace" xsi:type="string">current.paging</item>
                    </item>
                    <item name="selectProvider"
                          xsi:type="string">pension_fund_grid.pension_fund_grid.pension_fund_columns.ids
                    </item>
                </item>
            </argument>
        </paging>
    </container>

    <!-- **************************************************** -->
    <!-- Grid Columns -->
    <!-- **************************************************** -->
    <columns name="pension_fund_columns">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="storageConfig" xsi:type="array">
                    <item name="provider"
                          xsi:type="string">pension_fund_grid.pension_fund_grid.listing_top.bookmarks
                    </item>
                    <item name="namespace" xsi:type="string">current</item>
                </item>
                <item name="childDefaults" xsi:type="array">
                    <item name="storageConfig" xsi:type="array">
                        <item name="provider"
                              xsi:type="string">pension_fund_grid.pension_fund_grid.listing_top.bookmarks
                        </item>
                        <item name="root" xsi:type="string">columns.${ $.index }</item>
                        <item name="namespace" xsi:type="string">current.${ $.storageConfig.root}</item>
                    </item>
                </item>
            </item>
        </argument>

        <column name="mlmId">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">number</item>
                    <item name="filter" xsi:type="string">textRange</item>
                    <item name="sorting" xsi:type="string">asc</item>
                    <item name="label" xsi:type="string" translate="true">MLM ID</item>
                </item>
            </argument>
        </column>
        <column name="email">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="filter" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">E-Mail</item>
                </item>
            </argument>
        </column>
        <column name="periodSince">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="filter" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Period since</item>
                </item>
            </argument>
        </column>
        <column name="periodTerm">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="filter" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Period term</item>
                </item>
            </argument>
        </column>
        <column name="monthsTotal">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="filter" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Month total</item>
                </item>
            </argument>
        </column>
        <column name="monthsInact">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="filter" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Month inact</item>
                </item>
            </argument>
        </column>
        <column name="monthsLeft">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="filter" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Month left</item>
                </item>
            </argument>
        </column>
        <column name="balanceOpen">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">price</item>
                    <item name="filter" xsi:type="string">textRange</item>
                    <item name="label" xsi:type="string" translate="true">Balance Open</item>
                </item>
            </argument>
        </column>
        <column name="amountIn">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">price</item>
                    <item name="filter" xsi:type="string">textRange</item>
                    <item name="label" xsi:type="string" translate="true">Amount in</item>
                </item>
            </argument>
        </column>
        <column name="amountPercent">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">price</item>
                    <item name="filter" xsi:type="string">textRange</item>
                    <item name="label" xsi:type="string" translate="true">Amount percent</item>
                </item>
            </argument>
        </column>
        <column name="amountReturned">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">price</item>
                    <item name="filter" xsi:type="string">textRange</item>
                    <item name="label" xsi:type="string" translate="true">Amount returned</item>
                </item>
            </argument>
        </column>
        <column name="balanceClose">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">price</item>
                    <item name="filter" xsi:type="string">textRange</item>
                    <item name="label" xsi:type="string" translate="true">Balance close</item>
                </item>
            </argument>
        </column>
    </columns>
</listing>
